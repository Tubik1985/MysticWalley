<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MysticWalley.Views"
       x:Class="MysticWalley.AppShell">

    <TabBar>
        <ShellContent Title="Главная"
                      ContentTemplate="{DataTemplate views:MainPage}"
                      Route="MainPage" />

        <ShellContent Title="История"
                      ContentTemplate="{DataTemplate views:HistoryPage}"
                      Route="HistoryPage" />
        <ShellContent Title="TestToken"
              ContentTemplate="{DataTemplate views:TestTokenPage}" 
              Route="TestTokenPage"/>
    </TabBar>
</Shell>