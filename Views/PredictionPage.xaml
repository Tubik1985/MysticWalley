<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticWalley.Views.PredictionPage">

    <Grid>
        <!-- Фон героя -->
        <Image x:Name="BackgroundImage"
               Aspect="AspectFill"
               Opacity="0"/>

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

                <!-- Портрет с белым свечением -->
                <Image x:Name="CharacterIcon"
                       WidthRequest="200"
                       HeightRequest="200"
                       HorizontalOptions="Center">
                    <Image.Shadow>
                        <Shadow Brush="White"
                                Offset="0,0"
                                Radius="25"
                                Opacity="0.9" />
                    </Image.Shadow>
                </Image>

                <!-- Имя -->
                <Label x:Name="CharacterLabel"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center">
                    <Label.Shadow>
                        <Shadow Brush="White"
                                Offset="0,0"
                                Radius="8"
                                Opacity="0.8" />
                    </Label.Shadow>
                </Label>

                <!-- Описание -->
                <Label x:Name="CharacterDescription"
                       FontSize="16"
                       TextColor="#EEEEEE"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>

                <!-- Кнопка -->
                <Button Text="🔮 Получить предсказание"
                        Clicked="OnPredictClicked"
                        BackgroundColor="MediumPurple"
                        TextColor="White"
                        CornerRadius="15"
                        Padding="12,6"
                        HorizontalOptions="Center"/>

                <!-- Блок предсказания -->
                <Frame x:Name="ResultFrame"
                       Padding="12"
                       BackgroundColor="#80000000"
                       CornerRadius="12"
                       HasShadow="False"
                       Opacity="0"
                       HorizontalOptions="Center"
                       WidthRequest="280">
                    <Label x:Name="ResultLabel"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>