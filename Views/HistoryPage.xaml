<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticWalley.Views.HistoryPage"
             Title="Хроники">

    <CollectionView x:Name="HistoryList" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="#222" Padding="10" CornerRadius="8" Margin="0,5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Character}" 
                               TextColor="Orange"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Response}" 
                               TextColor="White" 
                               FontSize="14"/>
                        <Label Text="{Binding Timestamp}"
                               TextColor="#aaa" 
                               FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>