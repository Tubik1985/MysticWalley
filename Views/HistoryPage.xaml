<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticWalley.Views.HistoryPage"
             Title="История предсказаний">

    <CollectionView x:Name="HistoryView" Margin="12">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="4" Padding="8"
                       BorderColor="Purple"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="{Binding Character}"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="Purple"/>
                        <Label Text="{Binding Response}" 
                               FontSize="14"
                               TextColor="Black"/>
                        <Label Text="{Binding Timestamp}" 
                               FontSize="12"
                               TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>