<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticWalley.Views.HistoryPage"
             Title="История предсказаний">

    <VerticalStackLayout>
        <!-- Кнопка очистки -->
        <Button Text="🗑 Очистить историю"
                BackgroundColor="DarkRed"
                TextColor="White"
                Clicked="OnClearHistoryClicked"
                Margin="10"
                HorizontalOptions="Center"/>

        <!-- Список сообщений -->
        <CollectionView x:Name="HistoryView" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Purple" Margin="4" Padding="8">
                        <VerticalStackLayout>
                            <Label Text="{Binding Character}" FontAttributes="Bold" TextColor="Purple"/>
                            <Label Text="{Binding Response}" TextColor="Black"/>
                            <Label Text="{Binding Timestamp}" FontSize="10" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>