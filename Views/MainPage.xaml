<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticWalley.Views.MainPage"
             Title="Мистическая Долина"
             BackgroundImageSource="background.png">

    <!-- Список героев -->
    <CollectionView x:Name="CharactersView"
                    SelectionMode="Single"
                    SelectionChanged="OnCharacterSelected"
                    Margin="20">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Spacing="5" Padding="10" HorizontalOptions="Center">
                    <!-- Иконка -->
                    <Image Source="{Binding Icon}" 
                           WidthRequest="96" HeightRequest="96"
                           HorizontalOptions="Center"/>
                    <!-- Имя героя, белый с подложкой -->
                    <Frame Padding="4"
                           BackgroundColor="#80000000"
                           CornerRadius="6"
                           HasShadow="False"
                           HorizontalOptions="Center">
                        <Label Text="{Binding Name}" 
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>